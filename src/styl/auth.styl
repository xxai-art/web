:global
  .auth
    background #fff
    border-radius 4px
    box-shadow 0 0 3px rgba(0, 0, 0, 0.2)
    box-sizing border-box
    line-height 1.625
    width 23em

    &>header
      align-items center
      display flex
      justify-content space-evenly
      margin 0 0 0.5em
      padding 1.5em 2em 0
      user-select none

      &>.org
        align-items center
        display flex
        flex 1
        flex-direction column
        text-align center

        &>b:first-child
          background url(':/svg/logoTxt.svg') 50% 50% / 140px no-repeat
          filter invert(42%) sepia(1) saturate(47)
          height 69px
          margin-bottom 10px
          margin-top -5px
          width 100%

        &>b:last-child
          color #f00
          font-size 1.05em
          line-height 1.2em
          margin-bottom 0.5em

          &>i
            font-style normal
            margin 0
            text-align center

          &>span
            position relative
            top -2px

  .i18Nnso
    .auth
      .org
        &>b:last-child
          font-size 15px

  .i18Nen
    .auth
      .org
        &>b:last-child
          letter-spacing 1px

  .i18Nzh, .i18Nzh-TW
    .auth
      .org
        &>b:last-child
          letter-spacing 5px
