ul
  background #000
  display flex
  flex-wrap wrap
  list-style none
  margin 0
  overflow-x hidden
  padding 0

  &::after
    content ''
    flex-grow 99999

  &>li
    background-position 50% 10%, 50% 50%
    background-repeat no-repeat
    background-size cover, 128px
    cursor pointer
    display flex
    flex-direction column-reverse
    position relative
